<controls:SelectorWindow x:Class="PopupBlocker.Views.Selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:PopupBlocker.ViewModels"
        xmlns:controls="clr-namespace:PopupBlocker.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:SelectorViewModel}"
        d:DesignHeight="450" d:DesignWidth="800"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Title="Selector" WindowClick="{Binding ClickCommand}">
    <controls:SelectorWindow.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding EscapeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=controls:SelectorWindow}}"/>
    </controls:SelectorWindow.InputBindings>
    
    <DockPanel Visibility="{Binding ConfirmToolVisibility}"
        Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <ui:TextBox DockPanel.Dock="Top"
            Text="{Binding ProcessName}" IsReadOnly="True" IsTabStop="False"/>
        <ui:Button DockPanel.Dock="Left" Content="拦截进程" HorizontalAlignment="Left"
            Command="{Binding ConfirmProcessCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=controls:SelectorWindow}}"/>
        <ui:Button DockPanel.Dock="Left" Content="拦截窗口" HorizontalAlignment="Left"
            Command="{Binding ConfirmWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=controls:SelectorWindow}}"/>
        <ui:Button DockPanel.Dock="Right" Content="放弃" HorizontalAlignment="Right"
            Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=controls:SelectorWindow}}"/>
    </DockPanel>
</controls:SelectorWindow>
