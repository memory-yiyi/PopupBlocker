<ui:FluentWindow x:Class="PopupBlocker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
        xmlns:pages="clr-namespace:PopupBlocker.Views.Pages"
        mc:Ignorable="d"
        Title="PopupBlocker" Height="450" Width="800"
        x:Name="fwMain" Loaded="fwMain_Loaded" Closing="fwMain_Closing"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:NavigationView Grid.Row="1" x:Name="nvMain"
            PaneDisplayMode="Left"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleVisible="False"
            IsTopSeparatorVisible="False"
            OpenPaneLength="200">
            
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="拦截规则" TargetPageTag="Home"
                    TargetPageType="{x:Type pages:InterceptorRulePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="ChannelSubtract24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="拦截日志" NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:LogPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="DocumentTextClock24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="关于"
                    TargetPageType="{x:Type pages:AboutPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Info24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="设置" TargetPageTag="Setting"
                    TargetPageType="{x:Type pages:SettingPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <ui:TitleBar Grid.Row="0"
            Title="轻量级弹窗拦截器">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Margin="0,-4,-2,0" Source="pack://application:,,,/Assets/PopupBlocker.ico"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <tray:NotifyIcon Grid.Row="0"
            TooltipText="轻量级弹窗拦截器"
            Icon="pack://application:,,,/Assets/PopupBlocker.ico"
            FocusOnLeftClick="True"
            MenuOnRightClick="True">
            <tray:NotifyIcon.Menu>
                <ContextMenu>
                    <ui:MenuItem Header="主界面" Click="niMenu_Home_Click">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Home16"/>
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                    <ui:MenuItem Header="设置" Click="niMenu_Setting_Click">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Settings16"/>
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                    <ui:MenuItem Header="关闭应用" Click="niMenu_Close_Click">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Dismiss16"/>
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                </ContextMenu>
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>
    </Grid>
</ui:FluentWindow>
