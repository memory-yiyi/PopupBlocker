<Page x:Class="PopupBlocker.Views.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PopupBlocker.ViewModels"
      xmlns:controls="clr-namespace:PopupBlocker.Controls"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance vm:SettingViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="LogPage" Unloaded="Page_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:CardToggleSwitch Grid.Row="0"
            Content="软件有问题的时候再开，好吗？"
            IsChecked="{Binding IsEnableLog}">
            <controls:CardToggleSwitch.Icon>
                <ui:SymbolIcon Symbol="Chat16"/>
            </controls:CardToggleSwitch.Icon>
        </controls:CardToggleSwitch>

        <ui:TextBox Grid.Row="1" x:Name="tbLog"
            IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
            FontFamily="Consolas" FontSize="12"/>
    </Grid>
</Page>
