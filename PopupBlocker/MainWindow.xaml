<Window x:Class="PopupBlocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PopupBlocker.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:PopupInterceptorViewModel}"
        Title="弹窗拦截器" Height="550" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 控制区域 -->
        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
            <Button x:Name="btnStart" Content="启动拦截" Width="80" Margin="0,0,10,0"
                    Command="{Binding StartInterceptCommand}"/>
            <Button x:Name="btnStop" Content="停止拦截" Width="80" Margin="0,0,10,0"
                    Command="{Binding StopInterceptCommand}"/>
            <Button x:Name="btnTest" Content="测试弹窗" Width="80" Margin="0,0,10,0" Visibility="Collapsed"
                    Command="{x:Static vm:PopupInterceptorViewModel.TestPopupCommand}"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,10,0"/>
            <Button x:Name="btnExport" Content="导出配置" Width="80" Margin="0,0,10,0"
                    Command="{Binding ExportRulesCommand}"/>
            <Button x:Name="btnImport" Content="导入配置" Width="80" Margin="0,0,10,0"
                    Command="{Binding ImportRulesCommand}"/>
            <Button x:Name="btnResetCount" Content="重新计数" Width="80" Margin="0,0,10,0"
                    Command="{Binding ResetAllCountsCommand}"/>
            <TextBlock x:Name="tbStatus" Text="{Binding Status}" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <!-- 主内容区域 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 拦截日志标签页 -->
            <TabItem Header="拦截日志">
                <TextBox x:Name="tbLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                         FontFamily="Consolas" FontSize="12"/>
            </TabItem>

            <!-- 规则管理标签页 -->
            <TabItem Header="规则管理">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 添加规则区域 -->
                    <GroupBox Grid.Row="0" Header="添加新规则" Margin="5">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <ComboBox x:Name="cmbRuleType" Width="100" SelectedIndex="0">
                                    <ComboBoxItem Content="进程"/>
                                    <ComboBoxItem Content="窗口类名"/>
                                    <ComboBoxItem Content="标题关键词"/>
                                </ComboBox>
                                <TextBox x:Name="txtRulePattern" Width="250" Margin="10,0,0,0" 
                                         ToolTip="输入要拦截的模式"/>
                                <Button Content="添加规则" Width="80" Margin="10,0,0,0"
                                        Command="{Binding AddRuleCommand}">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource RuleInputConverter}">
                                            <Binding ElementName="txtRulePattern" Path="Text"/>
                                            <Binding ElementName="cmbRuleType" Path="SelectedIndex"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="提示: 进程名如 chrome.exe，窗口类名如 #32770，标题关键词如 广告" 
                                           Foreground="Gray" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 规则列表 -->
                    <ListView x:Name="lvRules" Grid.Row="1" Margin="5" ItemsSource="{Binding RulesView}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="启用" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Enabled}"
                                                      Command="{Binding DataContext.ToggleRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="类型" Width="80" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="规则模式" Width="180" DisplayMemberBinding="{Binding Pattern}"/>
                                <GridViewColumn Header="拦截次数" Width="80" DisplayMemberBinding="{Binding BlockedCount}"/>
                                <GridViewColumn Header="最后拦截" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastBlockedTime, StringFormat='yyyy-MM-dd HH:mm:ss'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="描述" Width="150" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="操作" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="移除" Width="60"
                                                    Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="tbStatusInfo" Text="{Binding StatusInfo}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
